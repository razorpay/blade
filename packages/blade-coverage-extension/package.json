{
  "name": "blade-coverage-extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-native": "0.64.4",
    "@types/react-dom": "^18.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "4.8.2",
    "web-vitals": "^2.1.0",
    "@razorpay/blade": "8.7.0",
    "styled-components": "5.3.6",
    "@fontsource/lato": "^4.5.10"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rimraf chrome-extension",
    "mkdirs": "mkdir -p chrome-extension",
    "copy:assets": "cp -r build/ chrome-extension",
    "copy:extensionAssets": "cp manifest.json chrome-extension && cp background_script.js chrome-extension",
    "copy": "yarn run copy:assets && yarn run copy:extensionAssets",
    "postbuild": "yarn run clean && yarn run mkdirs && yarn run copy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
