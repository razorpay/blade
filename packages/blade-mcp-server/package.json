{
  "name": "@razorpay/blade-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Blade",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "blade-mcp-server": "dist/index.js"
  },
  "files": [
    "dist",
    "knowledgebase"
  ],
  "scripts": {
    "prebuild": "mkdir -p knowledgebase && if [ -d \"../../knowledgebase\" ]; then find ../../knowledgebase -name \"*.md\" -exec cp {} ./knowledgebase/ \\; || true; else echo \"blade/knowledgebase directory not found\"; fi",
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint --ext .ts src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "razorpay",
    "blade",
    "mcp",
    "anthropic"
  ],
  "author": "Razorpay",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.10.2",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/node": "20.12.6",
    "tsx": "4.7.1",
    "typescript": "4.8.2"
  }
}
