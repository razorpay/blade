{
  "name": "@razorpay/blade",
  "version": "0.1.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/razorpay/blade.git"
  },
  "files": [
    "build",
    "components.d.ts",
    "components.js",
    "tokens.d.ts",
    "tokens.js",
    "utils.d.ts",
    "utils.js"
  ],
  "exports": {
    "./components": {
      "react-native": "./build/components/index.native.js",
      "default": "./build/components/index.web.js"
    },
    "./tokens": {
      "react-native": "./build/tokens/index.native.js",
      "default": "./build/tokens/index.web.js"
    },
    "./utils": {
      "react-native": "./build/utils/index.native.js",
      "default": "./build/utils/index.web.js"
    }
  },
  "scripts": {
    "prepublish": "yarn build",
    "build": "run-s build:*",
    "build:clean": "rm -rf build",
    "build:generate-types": "tsc -p ./tsconfig-generate-types.json",
    "build:copy-declarations": "copyfiles -u 1 \"src/**/*.d.ts\" build/types",
    "build:source": "rollup -c && node ./scripts/generateRootImports.js",
    "build:clean-declarations": "rm -rf build/types",
    "test:web": "BABEL_ENV=web-test jest -c ./jest.web.config.js",
    "test:native": "BABEL_ENV=development jest -c ./jest.native.config.js"
  },
  "devDependencies": {
    "@babel/core": "7.14.5",
    "@babel/plugin-transform-react-jsx": "7.13.12",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.13.15",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@testing-library/jest-dom": "5.12.0",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.2",
    "@testing-library/react-native": "7.2.0",
    "@types/lodash": "4.14.168",
    "@types/react": "17.0.3",
    "@types/react-native": "0.64.2",
    "babel-jest": "26.6.3",
    "babel-plugin-module-resolver": "4.1.0",
    "babel-plugin-styled-components": "1.12.0",
    "chalk": "4.1.1",
    "copyfiles": "2.4.1",
    "execa": "5.0.0",
    "figures": "3.2.0",
    "ismobilejs": "1.1.1",
    "jest": "26.6.3",
    "jest-matchmedia-mock": "1.1.0",
    "jest-useragent-mock": "0.1.1",
    "lodash": "4.17.21",
    "metro-react-native-babel-preset": "0.66.0",
    "moniker": "0.1.2",
    "npm-run-all": "4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-native": "0.64.0",
    "rollup": "2.51.1",
    "rollup-plugin-dts": "3.0.2",
    "rollup-plugin-peer-deps-external": "2.2.4"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.14.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.64.0"
  },
  "dependencies": {
    "@babel/runtime": "7.14.6"
  }
}
