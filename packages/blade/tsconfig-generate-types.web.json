// tsconfig for generating web types
{
  "extends": "./tsconfig-generate-types.json",
  // excluding test, stories & .native files while generating types
  "exclude": [
    "**/**.test.ts",
    "**/**.test.tsx",
    "__tests__",
    "**/**.stories.tsx",
    "**/**.stories.internal.tsx",
    "**/docs/**",
    "**/**.native.ts",
    "**/**.native.tsx",
    "**/**.svelte",
    "**/**.svelte.ts",
    "**/ThemePlayground/**/**.tsx"
  ],
  "compilerOptions": {
    "declarationDir": "build/generated-types/web",
    "moduleSuffixes": [".web", ""]
  }
}
