{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "ES2022"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "node_modules"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
