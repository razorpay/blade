{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "baseUrl": ".",
  "compilerOptions": {
    "paths": {
      "~utils": ["src/utils"],
      "~utils/*": ["src/utils/*"],
      "~components/*": ["src/components/*"],
      "~tokens/*": ["src/tokens/*"],
      "~src/*": ["src/*"]
    },
    // In Blade side we are targeting `.web` types
    // We can't add both `.native` & `.web` at once.
    "moduleSuffixes": [".all", ".web", ""]
    // Path aliases will be resolved by tsc-alias after compilation
  }
}
