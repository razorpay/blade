{
  "name": "@razorpay/blade-mcp",
  "version": "1.22.0",
  "description": "Model Context Protocol server for Blade",
  "main": "dist/exports.js",
  "type": "module",
  "bin": "dist/server.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/razorpay/blade.git"
  },
  "files": [
    "dist",
    "knowledgebase",
    "cursorRules",
    "base-blade-template"
  ],
  "scripts": {
    "prepare": "yarn build",
    "build": "cross-env NODE_ENV=production sh -c \"tsc && chmod +x dist/server.js && node src/replaceEnv.js\"",
    "dev": "tsx src/server.ts",
    "inspect": "npx -y @modelcontextprotocol/inspector node dist/server.js",
    "start": "node dist/server.js",
    "lint": "eslint --ext .ts src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:updateSnapshots": "vitest -u"
  },
  "keywords": [
    "razorpay",
    "blade",
    "mcp",
    "anthropic"
  ],
  "author": "Razorpay",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.20.2",
    "@segment/analytics-node": "2.2.1",
    "@sentry/node": "9.19.0",
    "dedent": "1.6.0",
    "zod": "3.24.3"
  },
  "resolutions": {
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@types/node": "20.12.6",
    "cross-env": "7.0.3",
    "dotenv": "16.4.5",
    "tsx": "4.7.1",
    "typescript": "4.8.2",
    "vitest": "2.1.9"
  }
}
